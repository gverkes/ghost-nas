<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.ghost" >

    <application
        android:name=".GhostApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SingleplayerActivity"
            android:label="@string/title_activity_single_player" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MultiplayerActivity"
            android:label="@string/title_activity_multi_player" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".HighscoreActivity"
            android:label="@string/title_activity_highscore" >
        </activity>
        <activity
            android:windowSoftInputMode="stateAlwaysVisible"
            android:screenOrientation="portrait"
            android:name=".GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
    </application>

</manifest>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/ic_settings_black_48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="@null"
        android:onClick="onClickSettings" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSingleplayerText"
        android:id="@+id/btnSingleplayer"
        android:drawableLeft="@drawable/ic_group_black_48dp"
        android:layout_above="@+id/btnMultiplayer"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:onClick="onClickSingleplayer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMultiplayerText"
        android:id="@+id/btnMultiplayer"
        android:drawableLeft="@drawable/ic_person_black_48dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnSingleplayer"
        android:layout_alignStart="@+id/btnSingleplayer"
        android:onClick="onClickMultiplayer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnHighscoreText"
        android:id="@+id/btnHighscores"
        android:drawableLeft="@drawable/ic_star_black_48dp"
        android:layout_below="@+id/btnMultiplayer"
        android:layout_alignRight="@+id/btnMultiplayer"
        android:layout_alignEnd="@+id/btnMultiplayer"
        android:layout_alignLeft="@+id/btnMultiplayer"
        android:layout_alignStart="@+id/btnMultiplayer"
        android:onClick="onClickHighscores" />


</RelativeLayout>
